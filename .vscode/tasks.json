{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Development Server",
            "type": "shell",
            "command": "python",
            "args": ["-m", "http.server", "8000"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Start Development Server (Node.js)",
            "type": "shell",
            "command": "npx",
            "args": ["serve", ".", "-p", "8000"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "problemMatcher": []
        },
        {
            "label": "Open in Browser",
            "type": "shell",
            "command": "start",
            "args": ["http://localhost:8000"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Start Development Server"
        }
    ]
}
